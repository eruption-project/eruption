name = "Fire"
description = "Renders a bonfire effect"
version = "0.1.2"
author = "The Eruption Development Team"
min_supported_version = "0.4.0"
tags = ['Background', 'Vendor']

[[config]]
type = 'int'
name = 'fire_speed'
description = 'Step fire animation every [n] frames'
min = 0
max = 10
default = 1

[[config]]
type = 'float'
name = 'opacity'
description = 'Opacity value in the range 0.0 .. 1.0, where 1.0 is fully opaque'
min = 0.0
max = 1.0
default = 1.0
