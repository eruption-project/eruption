name = "Wave"
description = "A sinusoidal Wave Effect"
version = "0.1.1"
author = "The Eruption Development Team"
min_supported_version = "0.1.24"
tags = ['Effect', 'Vendor']

[[config]]
type = 'bool'
name = 'horizontal'
description = 'Horizontal or vertical'
default = true

[[config]]
type = 'int'
name = 'direction'
description = '-1 == left/down, +1 == right/up'
default = -1

[[config]]
type = 'float'
name = 'scale_factor'
description = 'Scale factor of the alpha value'
min = 0.0
max = 255.0
default = 127.0

[[config]]
type = 'float'
name = 'speed_divisor'
description = 'Speed of the wave'
min = 0.0
max = 1000.0
default = 25.0

[[config]]
type = 'float'
name = 'wave_length'
description = 'Wave length divisor'
min = 0.0
max = 1000.0
default = 25.0

[[config]]
type = 'color'
name = 'color_wave'
description = 'Color of the wave'
default = 0x00000000

[[config]]
type = 'float'
name = 'opacity'
description = 'Opacity value in the range 0.0 .. 1.0, where 1.0 is fully opaque'
min = 0.0
max = 1.0
default = 1.0
